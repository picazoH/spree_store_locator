#store-locator-container
  #page-header
    :erb
        <h2><%= t(:Store_Locator) %></h2>
  #form-container
    %form#user-location{ action: '#', method: 'post' }
      #form-input
        :erb
          <%= label_tag :address, t(:Enter_address_or_zip)%>
        %input#address{ name: 'address', type: 'text' }/
      :erb
         <%= submit_tag Spree.t(:submit), :class => 'btn continue button primary', :id => 'submit' %>

  #map-container
    #loc-list
      %ul#list
    #map

-# jQuery Store Locator assets

=# javascript_include_tag 'lib/handlebars-1.0.0'
= javascript_include_tag 'http://maps.google.com/maps/api/js?sensor=false'
=# javascript_include_tag 'lib/jquery.storelocator'

:coffeescript

  $ ->
    $('#map-container').storeLocator(
      dataType: 'json'
      dataLocation: '/store_locator.json'
    )

